
@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnSpanStatsModule').click(function () {
            var url = '@Url.Action("ShowStatistics", "Home")';
            window.location.href = url;

        });
        
        $('#btnSpanEmail').click(function () {
            var url = '@Url.Action("EmailPage", "Home")';
            window.location.href = url;
        });


        $('#btnSpanDownload').click(function () {
            var url = '@Url.Action("Download","Home")';
            window.location.href = url;
        });
    });
</script>

<h2>Welcome to the Information Security Assessment Survey.</h2>
<hr />
<br />
<h4>Below are the current, past surveys that are held. Click on the appropriate action button for that action.</h4>
<div class="container">
    <table class="table-bordered" style="width:100%">
        <thead style="background-color:#33cc33;color:#000000">
            <tr>
                <th>Organization Name</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                var lstCompanyDetails = (List<InformationSecurityScorecard.Entities.Organization>)ViewBag.AllDetails;
                foreach (var m in lstCompanyDetails)
                {
                    <tr>
                        <td>@m.OrganizationName</td>
                        <td>@m.City</td>
                        <td>@m.State</td>
                        <td>@m.Country</td>
                        <td><button class="btn-primary" id="btnSpanStatsModule">Detailed Report</button>&nbsp;<button class="btn-primary" id="btnSpanEmail">Email Report</button>&nbsp;<button class="btn-primary" id="btnSpanDownload">Download Report</button></td>
                    </tr>
                }
               
            }
        </tbody>
    </table>
</div>
